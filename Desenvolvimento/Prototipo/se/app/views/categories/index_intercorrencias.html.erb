<h1>Intercorrencias</h1>

<table class="table">
  <tr>
    <th>Description</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% variables.each do |variable| %>
  <tr>
    <td><%= variable.description %></td>
    <td><%= variable.value %></td>
    <td><%= link_to 'Mostrar', variable %></td>
    <td><%= link_to 'Editar', edit_variable_path(variable) %></td>
    <td><%= link_to 'Excluir', variable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


<%= link_to 'Nova Intercorrencia', '/categories/intercorrencias/new', :class => 'btn' %>
<%= link_to 'Sugerir Intercorrencia', {:action => 'sugerir'} , :class => 'btn' %>
