<h1>Ocorrencias</h1>

<table class="table">
  <tr>
    <th>Descriçõa</th>
    <th>Peso</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% variables.each do |variable| %>
  <tr>
    <td><%= variable.description %></td>
    <td><%= variable.value %></td>
    <td><%= link_to 'Mostrar', variable, :class => 'btn' %></td>
    <td><%= link_to 'Editar', edit_variable_path(variable), :class => 'btn' %></td>
    <td><%= link_to 'Excluir', variable, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %></td>
  </tr>
<% end %>
</table>

