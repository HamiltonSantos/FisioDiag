<h1>Pacientes</h1>

<table class="table">
  <tr>
    <th>Nome</th>
    <th>Cpf</th>
    <th>Data nasc</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @patients.each do |patient| %>
  <tr>
    <td><%= patient.nome %></td>
    <td><%= patient.cpf %></td>
    <td><%= patient.data_nasc %></td>
    <td><%= link_to 'Mostrar', patient %></td>
    <td><%= link_to 'Editar', edit_patient_path(patient) %></td>
    <td><%= link_to 'Excluir', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo Paciente', new_patient_path, :class => 'btn' %>
