<h1>Valores</h1>

<table class= "table">
  <tr>
    <th>Valor Minimo</th>
    <th>Valor Maximo</th>
    <th>Peso</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @valores.each do |valore| %>
  <tr>
    <td><%= valore.value_min %></td>
    <td><%= valore.value_max %></td>
    <td><%= valore.value %></td>
    <td><%= valore.description %></td>
    <td><%= link_to 'Editar', edit_valore_path(valore), :class => "btn" %></td>
    <td><%= link_to 'Deletar', valore, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn" %></td>
  </tr>
<% end %>
</table>

